<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ConstraintWrapHeight"
    android:foreground="?selectableItemBackground">
    <ImageView
        android:id="@+id/iv_item_breaking"
        style="@style/ImageViewAllRatio"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@color/gray"
        app:layout_constraintDimensionRatio="2:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tv_item_breaking"
        style="@style/TextNormal"
        android:layout_width="0dp"
        android:layout_marginStart="10dp"
        tools:text="@string/app_name"
        android:lines="3"
        android:maxLines="3"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/iv_item_breaking"
        app:layout_constraintLeft_toRightOf="@id/iv_item_breaking"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>